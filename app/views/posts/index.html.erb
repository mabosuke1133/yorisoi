<h1>寄り添いタイムライン</h1>

<table>
  <thead>
    <tr>
      <th>感情レベル</th>
      <th>タイトル</th>
      <th>投稿者</th>
      <th>詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>レベル: <%= post.emotion_level %></td>
        <td><%= post.title %></td>
        <td><%= post.user.email %></td> <td><%= link_to '詳細を見る', post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>