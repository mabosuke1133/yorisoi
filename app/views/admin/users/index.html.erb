<h1>管理者用：ユーザー一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to "詳細", admin_user_path(user), class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>