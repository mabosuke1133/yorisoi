<h1>管理者用：全投稿一覧</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>投稿日</th>
      <th>投稿者</th>
      <th>タイトル</th>
      <th>詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= post.user.email %></td>
        <td><%= post.title %></td>
        <td><%= link_to "内容確認", admin_post_path(post), class: "btn btn-info btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>