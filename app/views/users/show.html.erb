<h2>自分の投稿一覧</h2>
<% @posts.each do |post| %>
  <div>
    <p><%= post.created_at.strftime('%Y/%m/%d') %>：<%= link_to post.title, post_path(post) %></p>
  </div>
<% end %>

<hr>

